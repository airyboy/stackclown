<!DOCTYPE html>
<html>
<head>
  <title>Stackclown</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= include_gon %>

<%= render 'layouts/header' %>
<div id="user-info" style="display: none"
     data-user-signed="<%= !current_user.nil? %>" <%= "data-user-id=#{current_user.id}" if current_user %> />

</div>
<div class="container">
  <div class="row">
      <% if flash[:notice]  %>
          <div class="alert alert-info alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <%= flash[:notice] %>
          </div>
      <% end %>
      <% if flash[:alert]  %>
          <div class="alert alert-warning alert-dismissible" role="alert"><%= flash[:alert] %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
      <% end %>
    <div class="col-md-10">
        <%= yield %>
    </div>
  </div>
  <%= render 'layouts/footer' %>
</div>
</body>
</html>
