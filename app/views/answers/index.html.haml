= provide(:title, 'Show question')
%h2
  = @question.title
%span
  = @question.body
= render 'comments_to_question'
%hr
.answers
  = render 'answers'
%br
  - if logged_in?
    = form_for @new_answer, url: question_answers_path(@question), remote: true do |a|
      = a.label :body, 'Your answer'
      = a.text_area :body
      %br
      = a.submit 'Create'